@inherits AntDesignTestBase

@code{

    [Theory]
    [InlineData(AntSizeLDSType.Large,"lg")]
    [InlineData(AntSizeLDSType.Small,"sm")]
    public void Renders_with_each_size(string size,string cls)
    {
        var cut = Context.Render(@<AntDesign.Cascader Size="@size" />);
        var spanNode = cut.Nodes.QuerySelector($".ant-select-{cls}");

        Assert.NotNull(spanNode);
    }
}