@namespace AntDesign
@inherits AntDomComponentBase

<footer class="@ClassMapper.Class" @ref="Ref" style="@Style" id="@Id">
    @ChildContent
</footer>
@_styleContent
@code {
    /// <summary>
    /// The inner content
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    protected override void OnInitialized()
    {
        var hashId = UseStyle("ant-layout", LayoutStyle.UseComponentStyle);
        ClassMapper.Add("ant-layout-footer").Add(hashId);

        base.OnInitialized();
    }
}
