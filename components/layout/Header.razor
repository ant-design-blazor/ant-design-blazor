@namespace AntDesign
@inherits AntDomComponentBase

<header class="@ClassMapper.Class" @ref="Ref" style="@Style" id="@Id">
    @ChildContent
</header>
@_styleContent
@code {
    /// <summary>
    /// The inner content
    /// </summary>
    [Parameter]
    public RenderFragment ChildContent { get; set; }


    protected override void OnInitialized()
    {
        var hashId = UseStyle("ant-layout", LayoutStyle.UseComponentStyle);
        base.OnInitialized();
        ClassMapper.Clear()
            .Add("ant-layout-header")
            .Add(hashId)
            .Add("ant-header");
    }

}
