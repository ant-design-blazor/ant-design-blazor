@namespace AntDesign
@inherits AntDomComponentBase

@if (!_closed)
{
  <span class="@ClassMapper.Class" style="@_style" id="@Id" @ref="Ref" @onclick="ClickTag">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <Icon Type="@Icon"></Icon>
        }
        @ChildContent
        @if (Closable)
        {
            <Icon Type="close" TabIndex="-1" @onclick="CloseTag" />
        }
    </span>
}
