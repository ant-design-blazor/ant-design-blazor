<div>
    <AntButton  Type="primary" Onclick="_=>open()">Open</AntButton>

    <AntDrawer Width="@wdFirstLayer" Closable="true" Visible="visible1" Title='("Multi-level drawer")' OnClose="_=>close()">
        <AntButton Type="primary" Onclick="_=>ShowDrawer()">Two-level Drawer</AntButton>
        <AntDrawer Width="260" Closable="true" Visible="visible2" Title='("two-level drawer")' OnClose="_=>CloseDrawer()">
            <AntButton Type="primary">This is two-level drawer</AntButton>
        </AntDrawer>

    </AntDrawer>
</div>

   @code{

       bool visible1 = false;
       bool visible2 = false;
       int wdFirstLayer = 520;

       void open()
       {
           this.visible1 = true;
       }

       void ShowDrawer()
       {

           this.visible2 = true;
           wdFirstLayer += 260;
       }

       void close()
       {
           this.visible1 = false;
       }

       void CloseDrawer()
       {
           wdFirstLayer -= 260;
           this.visible2 = false;
       }

}