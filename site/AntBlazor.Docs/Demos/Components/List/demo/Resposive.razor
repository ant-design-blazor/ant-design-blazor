        Xl = 6,
        Xxl = 3,
        Column = 3
    };

    public List<BasicItem> Data = new List<BasicItem>
{
        new BasicItem { Title = "Title 1"},
        new BasicItem { Title = "Title 2"},
        new BasicItem { Title = "Title 3"},
        new BasicItem { Title = "Title 4"},
        new BasicItem { Title = "Title 5"},
