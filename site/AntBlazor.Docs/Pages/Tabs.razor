@code{
    private static int addedIndex = 3;
    private Func<AntTabPane>
        Create = () =>
        {
            addedIndex++;
            return new AntTabPane()
            {
                Key = addedIndex.ToString(),
                ChildContent = (b) => { b.AddContent(0, $"Content of Tab Pane {addedIndex}"); },
                Tab = (b) => { b.AddContent(0, $"Tab {addedIndex}"); }
            };
        };
}
