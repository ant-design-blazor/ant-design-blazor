@code{
    private string mode = AntTabPosition.Top;

    RenderFragment<int>
    template = (i) =>
    {
        return@<AntTabPane Key="@i.ToString()">
        <Tab>Tab @i</Tab>
        <ChildContent>Content of Tab Pane @i</ChildContent>
    </AntTabPane>;
};
}

