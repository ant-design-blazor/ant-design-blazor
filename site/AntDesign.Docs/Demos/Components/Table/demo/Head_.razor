<Table @ref="_table" DataSource="dataSource" OnChange="OnChange" TItem="Data" Title="Table Title">
    <ColumnDefinitions>
        <PropertyColumn Property="c=>c.Name"
                        SorterCompare="@((a,b)=> a.Length - b.Length)"
                        SortDirections="new[] { SortDirection.Descending }"
                        Filters="nameFilters"
                        OnFilter="((value,name)=>name.StartsWith(value))" />
        <PropertyColumn Property="c=>c.Age"
                        DefaultSortOrder="@SortDirection.Descending"
                        SorterCompare="@((a,b)=> a - b)" />
        <PropertyColumn Property="c=>c.Address"
                        SorterCompare="@((a,b)=> a.Length - b.Length)"
                        SortDirections="new[] { SortDirection.Descending, SortDirection.Ascending }"
                        Filters="addressFilters"
                        FilterMultiple="false"
                        OnFilter="(value,address)=>address.StartsWith(value)" />
        <PropertyColumn Property="c=>c.Code" Filterable>
            <FilterTemplate>
                <Search WrapperStyle="padding:20px;" Placeholder="Search Code" @bind-Value="searchString" OnSearch="()=>_table?.ReloadData()" />
            </FilterTemplate>
        </PropertyColumn>
    </ColumnDefinitions>
</Table>

@using AntDesign.TableModels;
@using System.Text.Json;
@code {
    string searchString;
    IEnumerable<Data> dataSource;
    ITable _table;

    class Data
    {
        public Data(string name, int age, string address, string code)
        {
            Name = name;
            Age = age;
            Address = address;
            Code = code;
        }

        public string Name { get; set; }
        public int Age { get; set; }
        public string Address { get; set; }
        public string Code { get; set; }
    }

    Data[] data =
    {
        new("John Brown",32,"New York No. 1 Lake Park", "123"),
        new("Jim Green",42, "London No. 1 Lake Park", "456"),
        new("Joe Black", 32,"Sidney No. 1 Lake Park", "789"),
        new("Jim Red",32,"London No. 2 Lake Park", "101112"),
    };

    public TableFilter<string>[] nameFilters = new TableFilter<string>[] {
        new() { Text = "Joe", Value = "Joe" },
        new() { Text = "Jim", Value = "Jim" },
    };

    public TableFilter<string>[] addressFilters = new TableFilter<string>[] {
        new() { Text = "London", Value = "London" },
        new() { Text = "New York", Value = "New York" },
    };

    void OnChange(QueryModel<Data> query)
    {
        Console.WriteLine(JsonSerializer.Serialize(query));

        dataSource = query.ExecuteQuery(data.AsQueryable())
            .Where(x => string.IsNullOrWhiteSpace(searchString) || x.Code.Contains(searchString, StringComparison.OrdinalIgnoreCase));
    }

    void OnRowClick(RowData<Data> row)
    {
        Console.WriteLine($"row {row.Data.Name} was clicked");
    }
}