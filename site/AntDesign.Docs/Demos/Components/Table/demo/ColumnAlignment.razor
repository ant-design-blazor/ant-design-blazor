@using System.ComponentModel

<p>Column alignment: @columnAlign</p>
<EnumRadioGroup TEnum="ColumnAlign" @bind-Value="@columnAlign" />

<Table TItem="Data" DataSource="@data">
    @*By default, ColumnAlign is Left (if Align property isn't defined)*@
    <Column @bind-Field="@context.Name" Align="@columnAlign" />
    <Column @bind-Field="@context.Age" Align="@columnAlign" Sortable />
    <Column @bind-Field="@context.Address" Align="@columnAlign">
        <TitleTemplate>
            <span> <Icon Type="environment" /> Address </span>
        </TitleTemplate>
    </Column>
    <Column @bind-Field="@context.Tags" Align="columnAlign">
        @foreach (var tag in context.Tags)
        {
            string color = tag.Length > 5 ? "geekblue" : "green";
            <Tag Color="@color">@tag</Tag>
        }
    </Column>
    <ActionColumn Title="Action" Align="columnAlign">
        <Space Size=@("middle")>
            <SpaceItem>
                <a>Invite @context.Name</a>
            </SpaceItem>
            <SpaceItem>
                <a>Delete</a>
            </SpaceItem>
        </Space>
    </ActionColumn>
</Table>


