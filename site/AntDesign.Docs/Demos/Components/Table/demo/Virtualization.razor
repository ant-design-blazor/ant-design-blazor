<Table TItem="Data" DataSource="data" ScrollY="500px" Total="total" EnableVirtualization OnChange="OnChange" RemoteDataSource HidePagination>
    <Selection />
    <PropertyColumn Property="c=>c.Name" Width="400" />
    <PropertyColumn Property="c=>c.Age" Width="150" />
    <PropertyColumn Property="c=>c.Address" />
</Table>

@code {
    class Data
    {
        public string Name { get; set; }

        public int Age { get; set; }

        public string Address { get; set; }
    }

    Data[] data = Array.Empty<Data>();

    int total = 0;
    int count = 0;

    void LoadData()
    {
