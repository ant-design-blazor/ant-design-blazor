        //}).ToArray();
    }


    async Task OnChange(TableModels.QueryModel queryModel)
    {
        Console.WriteLine($"StartIndex:{queryModel.StartIndex} PageSize: {queryModel.PageSize} {++count}");
        await Task.Delay(1000);
        data = Enumerable.Range(queryModel.StartIndex, queryModel.PageSize).Select(i => new Data
            {
                Name = $"Edward King {i}",
                Age = 32,
                Address = $"Edward King {i}'s address"
            }).ToArray();

        total = 10000;
    }
}
