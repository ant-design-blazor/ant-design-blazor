@using System.ComponentModel
@using AntDesign.TableModels

Dynamic columns:
<CheckboxGroup @bind-Value="columns">
    <Checkbox Label="Age"></Checkbox>
    <Checkbox Label="Address"></Checkbox>
</CheckboxGroup>

<Table TItem="Data" DataSource="@data" ScrollX="1500">
    <PropertyColumn Property="c=>c.Name">
        <a>@context.Name</a>
    </PropertyColumn>

    @if (columns.Contains("Age"))
    {
        <PropertyColumn Property="c=>c.Age"></PropertyColumn>
    }
    @if (columns.Contains("Address"))
    {
        <PropertyColumn Property="c=>c.Address">
            <TitleTemplate>
                <span> <Icon Type="environment" /> Address </span>
            </TitleTemplate>
        </PropertyColumn>
    }
   
    <PropertyColumn Property="c=>c.Tags" Fixed="right">
        @foreach (var tag in context.Tags)
        {
            var color = tag.Length > 5 ? "geekblue" : "green";
            if (tag == "loser")
            {
                color = "volcano";
            }
            <Tag Color="@color">@tag</Tag>
        }
    </PropertyColumn>
  <ActionColumn Title="Action">
    <Space Size=@("middle")>
      <SpaceItem>
        <a>Invite @context.Name</a>
      </SpaceItem>
      <SpaceItem>
        <a>Delete</a>
      </SpaceItem>
    </Space>
  </ActionColumn>
</Table>

