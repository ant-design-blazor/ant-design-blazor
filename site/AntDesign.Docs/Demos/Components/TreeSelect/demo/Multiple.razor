@using AntDesign.Docs.Demos.Components.TreeSelect.Demo 


<TreeSelect Multiple="true" TItem="WebMenu" 
            DataSource="@(LocalJsonData.Data)"
            RootValue="1"
            TitleExpression="m => m.MenuName"
            KeyExpression="m => m.MenuId"
            ChildrenExpression="menuId => LocalJsonData.GetMenusByParentId(menuId)"
            IsLeafExpression="m => LocalJsonData.HasChild(m.MenuId)" 
            ValuesChanged="OnValuesChange"
            TreeDefaultExpandAll>
</TreeSelect>

select MenuId: @selectMenuId

@code{

    private string selectMenuId;

    public void OnValuesChange(IEnumerable<string> args)
    {
        selectMenuId = string.Join(',', args);
    }

}