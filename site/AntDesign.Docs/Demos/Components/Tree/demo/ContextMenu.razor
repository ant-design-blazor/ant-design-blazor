<Tree @ref="tree" OnContextMenu="OnContextMenu" TItem="string" ShowLine="true">
    <TreeNode Title="Node1" TItem="string" Expanded="true">
        <TreeNode Title="Node1-1" TItem="string"></TreeNode>
    </TreeNode>
    <TreeNode Title="Node2" TItem="string"></TreeNode>
</Tree>
<Menu Style="@menuStyle">
    <MenuItem OnClick="Click">
        点我消失
    </MenuItem>
</Menu>

@code {
        Tree<string> tree = null;
        string menuStyle = "display:none;";
protected override void OnInitialized()
    {
       
    }

    void CreateNode(MouseEventArgs args)
    {
        if (tree.SelectedNode != null)
        {
            Console.WriteLine($"CreateNode {tree.SelectedNode.DataItem}");
        }
        else
        {
            Console.WriteLine($"CreateNode Root");
        }
        menuStyle = "display:none;";
    }

    void Click()
    {
        menuStyle = "display:none;";
    }

    void OnContextMenu(TreeEventArgs<string> args)
    {
        menuStyle = string.Format("position:fixed; left:{0}px; top:{1}px; width:200px; z-index:999", args.OriginalEvent.ClientX, args.OriginalEvent.ClientY);
    }
}