<div>
    <div style="margin-bottom: 16px">
		simplifySearchResults: <Switch @bind-Checked="_simplifySearchResults" />
	</div>
    <Search @bind-Value="@searchKey" Placeholder="Search.." />
    <Tree ShowIcon
          SearchValue="@searchKey"
          SimplifySearchResults="@_simplifySearchResults"
          MatchedClass="site-tree-search-value"
          DataSource="datas"
          TitleExpression="x => x.DataItem.Title"
          ChildrenExpression="x => x.DataItem.Children"></Tree>
</div>

<style>
    .site-tree-search-value {
        color: #f50;
    }
</style>

@code {
    bool _simplifySearchResults = false;
    string searchKey;

    List<Data> datas = new List<Data>()
    {
        new("0-0","0-0")
        {
            Children = new()
            {
                new("0-0-0", "0-0-0")
                {
                    Children = new()
                    {
                        new("0-0-0-0", "0-0-0-0"),
                        new("0-0-0-1", "0-0-0-1"),
                        new("0-0-0-2", "0-0-0-2"),
                    }
                },
                new("0-0-1","0-0-1")
                {
                    Children = new()
                    {
                        new("0-0-1-0", "0-0-1-0"),
                        new("0-0-1-1", "0-0-1-1"),
                        new("0-0-1-2", "0-0-1-2"),
                    }
                },
                new("0-0-2","0-0-2"),
            }
        },
        new("0-1","0-1")
        {
            Children = new()
            {
                new("0-1-0", "0-1-0")
                {
                    Children = new()
                    {
                        new("0-1-0-0","0-1-0-0"),
                        new("0-1-0-1","0-1-0-1"),
                        new("0-1-0-2","0-1-0-2"),
                    },
                },
                new ("0-1-1","0-1-1")
                {
                    Children = new()
                    {
                        new("0-1-1-0","0-1-1-0"),
                        new("0-1-1-1","0-1-1-1"),
                        new("0-1-1-2","0-1-1-2"),
                    },
                },
                new("0-1-2","0-1-2"),
            }
        },
        new("0-2","0-2"),
    };

    private record Data(string Id, string Title)
    {
        public List<Data> Children { get; set; } = new List<Data>();
    }
}


