@using AntDesign.Charts
@using Title = AntDesign.Charts.Title

    <Tabs>
        <TabPane Key="1">
            <TabTemplate>示例1</TabTemplate>
            <ChildContent>
                <RangeColumn Data="data1" Config="config1" />
            </ChildContent>
        </TabPane>

        <TabPane Key="2">
            <TabTemplate>示例2</TabTemplate>
            <ChildContent>
                <RangeColumn Data="data2" Config="config2" OtherConfig="config2_1" />
            </ChildContent>
        </TabPane>
    </Tabs>

@code{

    #region 示例1

    readonly object[] data1 =
    {
        new {type = "分类一", values = new[] {76, 100}},
        new {type = "分类二", values = new[] {56, 108}},
        new {type = "分类三", values = new[] {38, 129}},
